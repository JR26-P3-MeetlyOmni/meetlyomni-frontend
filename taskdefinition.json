{
  "family": "meetly-frontend",
  "executionRoleArn": "arn:aws:iam::739287608007:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "containerDefinitions": [
    {
      "name": "web",
      "image": "__IMAGE__",
      "portMappings": [{ "containerPort": 3000, "protocol": "tcp" }],
      "essential": true,

      "command": ["sh", "-c", "HOST=0.0.0.0 PORT=3000 node server.js"],

      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" },
        { "name": "HOST", "value": "0.0.0.0" },

        { "name": "URL", "value": "https://d1gxwj2tjnrcnt.cloudfront.net" },
        { "name": "NEXTAUTH_URL", "value": "https://d1gxwj2tjnrcnt.cloudfront.net" },

        {
          "name": "ALB_URL",
          "value": "http://meetly-frontend-alb-1721160996.ap-southeast-2.elb.amazonaws.com"
        }
      ],
      "secrets": [
        {
          "name": "API_BASE_URL",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:739287608007:parameter/meetly/frontend/api_base_url"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/meetly-frontend",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "web"
        }
      }
    }
  ]
}
