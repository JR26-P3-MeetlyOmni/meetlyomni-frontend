{
  "family": "meetly-frontend",
  "executionRoleArn": "arn:aws:iam::351889159066:role/meetlyomni-dev-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::351889159066:role/meetlyomni-dev-ecs-task-role",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "__IMAGE__",
      "portMappings": [{ "containerPort": 3000, "protocol": "tcp" }],
      "essential": true,

      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" },
        { "name": "HOST", "value": "0.0.0.0" },
        { "name": "URL", "value": "https://d1gxwj2tjnrcnt.cloudfront.net" },
        { "name": "NEXTAUTH_URL", "value": "https://d1gxwj2tjnrcnt.cloudfront.net" },
        {
          "name": "ALB_URL",
          "value": "meetlyomni-alb-frontend-2101221063.ap-southeast-2.elb.amazonaws.com"
        }
      ],
      "secrets": [
        {
          "name": "API_BASE_URL",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:351889159066:parameter/meetlyomni/dev/frontend/API_BASE_URL"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/meetlyomni/dev/frontend",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "web"
        }
      }
    }
  ]
}
